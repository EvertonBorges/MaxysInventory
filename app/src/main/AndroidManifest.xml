<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.maxys.maxysinventory">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launch_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launch_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".secondaryActivities.MovimentacoesActivity" />
        <activity android:name=".secondaryActivities.UsuarioActivity" />
        <activity android:name=".secondaryActivities.PermissaoActivity" />
        <activity android:name=".secondaryActivities.ManageProdutoActivity" />
        <activity android:name=".secondaryActivities.ProdutoMenuActivity" />
        <activity android:name=".secondaryActivities.SelecionaEmpresaActivity" />
        <activity android:name=".PrincipalActivity" />
        <activity android:name=".secondaryActivities.EmpresaActivity"/>
        <activity android:name=".secondaryActivities.CreateAccountActivity" />
        <activity
            android:name=".secondaryActivities.LoginActivity"
            android:screenOrientation="fullSensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".secondaryActivities.BarCodeActivity"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".secondaryActivities.InventarioActivity"
            android:screenOrientation="fullSensor" />
    </application>

</manifest>